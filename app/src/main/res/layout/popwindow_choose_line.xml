<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_popWindow_choose_line"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:background="@drawable/background_search_line_et">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_map_search"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:layout_marginLeft="8dp"
                    android:textColorHint="#40000000"
                    android:hint="请输入您要查询的线路"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="#A6000000"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="第一客运分公司-八队"
                android:textColor="#D9000000"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="专61"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    android:id="@+id/cb_pop_search_line_321"
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="321"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="119"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="125"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector_short"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="第一客运分公司-六队"
                android:textStyle="bold"
                android:textColor="#D9000000"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="专32"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="305"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    android:id="@+id/cb_pop_search_line_104"
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="104"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EBEBEB"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="第二客运分公司-枢纽中心"
                android:textColor="#D9000000"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="专61"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="331"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="119"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="125"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector_short"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="第二客运分公司-一队"
                android:textColor="#D9000000"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="专61"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="331"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="119"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:background="@drawable/checkbox_selector_short"
                    android:layout_marginRight="12dp"/>

                <CheckBox
                    android:id="@+id/cb_pop_search_line_24"
                    style="@style/CheckBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="24"
                    android:textSize="14sp"
                    android:textColor="#A6000000"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector_short"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#0D000000" />

            <TextView
                android:id="@+id/tv_pop_search_line_cancel"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/background_pop_reset"
                android:gravity="center"
                android:text="取消"
                android:textColor="#D9000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pop_search_line_sure"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/background_pop_sure"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>