<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_popWindow"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_pop"
            android:orientation="vertical">

            <TextView
                android:layout_width="64dp"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="稽查时间"
                android:textColor="#D9000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pop_date_start"
                    android:layout_width="108dp"
                    android:layout_height="32dp"
                    android:background="@drawable/background_pop_choose_time"
                    android:gravity="center"
                    android:text="2022-02-16"
                    android:textColor="#A6000000" />

                <TextView
                    android:id="@+id/tv_pop_date_end"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="至"
                    android:textColor="#D9000000"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/background_pop_choose_time"
                        android:gravity="center"
                        android:text="请选择"
                        android:textColor="#40000000" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="22.5dp"
                    android:text="所属部门"
                    android:textColor="#D9000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pop_company_total"
                    android:layout_width="149dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:text="第一客运分公司/一车…"
                    android:textColor="#2B6BFE"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="48dp"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="分公司"
                android:textColor="#D9000000"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/cb_pop_all_company"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/cb_pop_first_company"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="第一客运分公司"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp">

                <CheckBox
                    style="@style/CheckBox"
                    android:id="@+id/cb_pop_second_company"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="第二客运分公…"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/cb_pop_third_company"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="第三客运分公.…"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/cb_pop_forth_company"
                style="@style/CheckBox"
                android:layout_width="114dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/checkbox_selector"
                android:gravity="center"
                android:text="第四客运分公…"
                android:textColor="#A6000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="车队"
                android:textColor="#D9000000"
                android:textSize="16dp" />

            <CheckBox
                android:id="@+id/cb_pop_all_car_team"
                style="@style/CheckBox"
                android:layout_width="114dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/checkbox_selector"
                android:gravity="center"
                android:text="全部"
                android:textColor="#A6000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="线路"
                android:textColor="#D9000000"
                android:textSize="16dp" />

            <CheckBox
                android:id="@+id/cb_pop_all_line"
                style="@style/CheckBox"
                android:layout_width="114dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/checkbox_selector"
                android:gravity="center"
                android:text="全部"
                android:textColor="#A6000000"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="驾驶员"
                android:textColor="#D9000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="238dp"
                    android:layout_height="32dp"
                    android:background="@drawable/background_pop_choose_time" />

                <TextView
                    android:id="@+id/tv_pop_driver"
                    android:layout_width="112dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/background_pop_choose_time"
                    android:text="请输入驾驶员工号"
                    android:textColor="#40000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="车辆自编号"
                android:textColor="#D9000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="238dp"
                    android:layout_height="32dp"
                    android:background="@drawable/background_pop_choose_time" />

                <TextView
                    android:id="@+id/tv_pop_train_number"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/background_pop_choose_time"
                    android:text="请输入车辆自编号"
                    android:textColor="#40000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="22.5dp"
                    android:text="违规类别"
                    android:textColor="#D9000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pop_illegal_total"
                    android:layout_width="149dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="调整信息化设备，文…"
                    android:textColor="#2B6BFE"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/cb_pop_illegal_change_equipment"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="调整信息化设…"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
                <CheckBox
                    android:id="@+id/cb_pop_illegal_video"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="饰品佩戴"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp">
                <CheckBox
                    android:id="@+id/cb_pop_illegal_against_safe"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="违反安全行驶…"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
                <CheckBox
                    android:id="@+id/cb_pop_illegal_change_equipment_2"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="调整信息化设…"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/cb_pop_illegal_culture_behavior"
                style="@style/CheckBox"
                android:layout_width="114dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/checkbox_selector"
                android:gravity="center"
                android:text="文明行为"
                android:textColor="#A6000000"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="状态"
                android:textColor="#D9000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/cb_pop_state_wait_feedback"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="待反馈"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/cb_pop_state_complete"
                    style="@style/CheckBox"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="#A6000000"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tv_pop_reset"
                        android:layout_width="114dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/background_pop_reset"
                        android:gravity="center"
                        android:text="重置"
                        android:textColor="#D9000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_pop_sure"
                        android:layout_width="114dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/background_pop_sure"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>