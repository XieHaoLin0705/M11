<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#2B6BFE">

    <ImageView
        android:id="@+id/img_title_bar_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_back"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="73dp"
            android:layout_height="25dp"
            android:text="我的稽查"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/ll_check_work_title_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="103"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_down_pull"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_title_bar_choose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_choose" />

</RelativeLayout>