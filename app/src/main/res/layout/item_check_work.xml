<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/background_item">
    <LinearLayout
        android:layout_width="165.5dp"
        android:layout_height="107dp"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="10.5dp"
        android:background="@drawable/background_item_check_work"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_check_work_train_line"
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="9.5dp"
                android:text="104"
                android:textColor="#2B6BFE"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14.5dp"
                android:background="#597EF7" />

            <TextView
                android:id="@+id/tv_item_check_work_train_time"
                android:layout_width="wrap_content"
                android:layout_height="22.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="9.5dp"
                android:text="高峰班"
                android:textColor="#2B6BFE"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="11.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="11.5dp"
            android:background="#EBEBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_car" />

            <TextView
                android:id="@+id/tv_item_check_work_train_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="27737"
                android:textColor="#A6000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_driver" />

            <TextView
                android:id="@+id/tv_item_check_work_driver"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="张伟"
                android:textColor="#A6000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="78.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25.5dp"
        android:layout_marginRight="169dp"
        android:background="@drawable/dotted_line_vertical" />
    <LinearLayout
        android:layout_width="7.5dp"
        android:layout_height="93.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18.5dp"
        android:layout_marginRight="165dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_check_work_train_state_point"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:background="@drawable/background_small_point_green" />

        <TextView
            android:id="@+id/tv_item_check_work_wine_state_point"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:layout_marginTop="20.5dp"
            android:background="@drawable/background_small_point_red" />

        <TextView
            android:id="@+id/tv_item_check_work_signIn_state_point"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:layout_marginTop="20.5dp"
            android:background="@drawable/background_small_point_yellow" />

        <TextView
            android:id="@+id/tv_item_check_work_signOut_state_point"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:layout_marginTop="20.5dp"
            android:background="@drawable/background_small_point_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="157dp"
        android:layout_height="104dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="车检状态："
                android:textColor="#A6000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_item_check_work_train_state"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="通过"
                android:textColor="#47A917"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="酒测状态："
                android:textColor="#A6000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_item_check_work_wine_state"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="不通过"
                android:textColor="#F5222D"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="签到状态："
                android:textColor="#A6000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_item_check_work_signIn_state"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="迟到"
                android:textColor="#47A917"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="签退状态："
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_item_check_work_signOut_state"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="未签退"
                android:textColor="#73000000"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>